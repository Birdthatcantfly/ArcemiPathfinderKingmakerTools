<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Arcemi.Pathfinder.Kingmaker.Editor.ViewModels;assembly=Arcemi.Pathfinder.Kingmaker.Editor"
        Icon="resm:Arcemi.Pathfinder.Kingmaker.Editor.Assets.avalonia-logo.ico"
        Title="Arcemi Pathfinder Kingmaker Editor">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>

  <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>
    <TextBlock Text="{Binding Greeting}"/>
    <TextBox Grid.Row="1" Text="{Binding Greeting}"/>
    <TextBox Grid.Row="2" Text="{Binding Greeting}"/>
  </Grid>

</Window>