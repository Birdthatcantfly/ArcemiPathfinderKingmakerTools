@page "/Inventory"
@inject MainViewModel Model
@using Arcemi.Pathfinder.SaveGameEditor.Components;

@if (!Model.CanEdit) {
    <p><em>Save file not loaded.</em></p>
}
else {
    <TabControl StartIndex="0">
        <Tab Name="Party">
            <Content>
                <InventoryView Inventory="Model.Inventory"></InventoryView>
            </Content>
        </Tab>
        <Tab Name="Stash">
            <Content>
                <InventoryView Inventory="Model.SharedStash"></InventoryView>
            </Content>
        </Tab>
    </TabControl>
}

